<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="IndicativeRadioGpBtn" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@null</item>
        <item name="android:drawableTop">@drawable/indicativeradio_default_radio_drawtop_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    
  <style name="iostitlebarTextView" >
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/iostitlebat_titletextview_color_selector</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toLeftOf">@id/iostitlebar_rightButton</item>
        <item name="android:layout_toRightOf">@id/iostitlebar_leftButton</item>
    </style>
</resources>